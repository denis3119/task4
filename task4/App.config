<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
    <system.serviceModel>
        <bindings>
            <basicHttpBinding>
                <binding name="HelloWorldPortBinding" />
            </basicHttpBinding>
        </bindings>
        <client>
            <endpoint address="http://localhost:9000/HelloWorld" binding="basicHttpBinding"
                bindingConfiguration="HelloWorldPortBinding" contract="ServiceReference1.HelloWorld"
                name="HelloWorldPort" />
        </client>
    <bindings>
      <basicHttpBinding>
        <binding name="HelloWorldPortBinding"
                 maxReceivedMessageSize = "999999999999">
          <security mode="None" />
        </binding>
      </basicHttpBinding>
    </bindings>
    </system.serviceModel>
</configuration>